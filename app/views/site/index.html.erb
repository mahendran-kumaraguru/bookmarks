<table style="width: 100%"><tr><td style="width: 90%"><h2>Latest Bookmarks</h2></td>
	<% if !user_signed_in? %>
		<td><%= link_to 'Sign In', new_user_session_path %></td>
	<% else %>
		<td><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></td>
	<% end %>
</tr></table>
<table style="width: 30%">
  <thead>
    <tr>
      <th style="width: 80%">Url</th><td><%= link_to "Manage", "bookmarks" %></td>
    </tr>
  </thead>

  <tbody>
  <% @bookmarks.each do |bookmark| %>
    <tr>
      <td colspan="2"><%= link_to bookmark.title, bookmark.url %></td>
    </tr>
  <% end %>
  </tbody>
</table>